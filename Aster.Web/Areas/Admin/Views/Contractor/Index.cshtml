@model Aster.Web.Areas.Admin.Models.ContractorListModel
@{
    ViewData["Title"] = "Contractors";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-category">Contractors</h5>
                <h4 class="card-title">Contractor List</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Ref No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    NI Number
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contact No
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var c in Model.contractors) {
                                <tr>
                                    <td>
                                        @c.ReferenceNo
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="contractor" asp-action="detail" asp-route-id="@c.Id">
                                            @c.Forename @c.Surname
                                        </a>
                                    </td>
                                    <td>
                                        @c.NationalInsuranceNo
                                    </td>
                                    <td>
                                        @c.Email
                                    </td>
                                    <td>
                                        @c.ContactNo
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>